{
	"name": "Confidential Containers Dev Container",
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
		"ghcr.io/devcontainers-extra/features/kind:1": {},
		"ghcr.io/rio/features/k9s:1": {},
	    "ghcr.io/devcontainers/features/sshd:1": {},
		"ghcr.io/dhoeric/features/oras:1": {},
		"ghcr.io/devcontainers/features/rust:1": {}
	},
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	//"forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": ".devcontainer/postCreateCommand.sh",

	// Use 'postStartCommand' to run commands after the container is created like starting minikube.
	"postStartCommand": "nohup bash -c '.devcontainer/postStartCommand.sh &' > /dev/null 2>&1",

	// Use 'postAttachCommand' to run commands each time a connection is made.
	"postAttachCommand": ".devcontainer/postAttachCommand.sh",

	// Configure tool-specific properties.
	//"customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	//"remoteUser": "root"

	// Request More Resources
	"hostRequirements": {
		"cpus": 4,
   		"memory": "8gb",
		"storage": "32gb"
	},

	"customizations": {
		"vscode": {
			"settings": {
				"workbench.editorAssociations": {
					"README.md": "vscode.markdown.preview.editor"
				}
			}
		},
		"codespaces": {
			"openFiles": [
				"README.md"
			]
		}
	}	
}